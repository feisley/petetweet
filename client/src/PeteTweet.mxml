								</mx:Panel>
							</mx:Canvas>
							<mx:Canvas label="User Profile" width="100%" height="100%">
								<mx:List dataProvider="{searchTweets}" variableRowHeight="true" bottom="0" top="108" right="0" left="0">
									<mx:itemRenderer>
										<mx:Component>
											<petetweet:ProfileTweetRenderer>
												
