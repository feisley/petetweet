							</mx:Canvas>
						</mx:ViewStack>
					</mx:Canvas>
				</mx:TabNavigator>
				<mx:Label x="217" y="17" text="Remaining Characters:"/>
				<mx:Label x="364" y="17" text="256" fontSize="10" fontWeight="bold" id="remainingChars"/>
			</mx:Canvas>
